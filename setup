#Update
sudo apt-get update
sudo apt-get upgrade -y
sudo apt-get install -y \
          build-essential \
          clang 

curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

PREFIX=/usr/local/bin ./build/install_llvm.sh

echo -e "export PATH=/path-to-clang/bin:$PATH\nexport LD_LIBRARY_PATH=/path-to-clang/lib:$LD_LIBRARY_PATH" \
          >>~/.bashrc
